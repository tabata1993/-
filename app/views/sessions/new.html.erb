<% @page_title = "ログイン" %>
<h1 class="page_title">ログインする</h1>

<div class="sessions_new_box">
  <div class="site_title site_title_user_new">
    <img src="/images/paws.png">
    <i>Syumitier</i>
    <p>-趣味の幅をゆるーく広げるサイト-</p>
  </div>

  <div>
    <%= form_with(scope: :session, url: sessions_path,local:true ) do |f| %>
      <p><%= f.label :email %></p>
      <p><%= f.text_field :email %></p>
      <p><%= f.label :password %></p>
      <p><%= f.password_field :password %></p>
      <p><%= f.submit"login" %></p>
    <% end %>
  </div>
</div>
