<h1>ユーザー新規登録</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  <% end %>
<% end %>


<%= form_with( model:@user ,local:true ,url: confirm_users_path )do |f| %>
  <p><%= f.label :ユーザー名 %></p>
  <p><%= f.text_field :name %></p>
  <p><%= f.label :mail %></p>
  <p><%= f.text_field :email %></p>
  <p><%= f.label :password %></p>
  <p><%= f.password_field :password %></p>
  <p><%= f.label :"password(確認)" %></p>
  <p><%= f.password_field :password_confirmation %></p>
  <p><%= f.label :性別 %></p>
  <p><%= f.text_field :sex %></p>
  <p><%= f.label :年齢 %></p>
  <p><%= f.text_field :age %></p>
  <p><%= f.label :自己紹介 %></p>
  <p><%= f.text_field :introduction %></p>

  <p><%= f.submit :確認画面へ %></p>
<% end %>
